{
  "name": "posthtml-sugar-srcset",
  "version": "1.0.1",
  "description": "This shortens the description of the value of srcset.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/posthtml/posthtml-sugar-srcset"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "nyc mocha 'test/**/*.js'",
    "lint": "eslint lib/** --fix"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "test/**/*.js": [
      "eslint --fix --global it --global describe --global beforeEach",
      "git add"
    ]
  },
  "keywords": [
    "posthtml-plugin",
    "srcset",
    "picture"
  ],
  "author": "Tsuguya Toma",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^13.1.1",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "posthtml": "^0.16.0",
    "power-assert": "^1.6.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 7
    },
    "rules": {
      "semi": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
